                    <rect x="22" y="22.2" class="st0" width="16.3" height="16.3"/>
                </svg>
            </div>
        </div>
        <div class="tab-dropdown">
            {% include 'demo/tab-dropdown-single.twig' with
                {
                    'name' : 'Regina Wills'
                }
            %}
            {% include 'demo/tab-dropdown-single.twig' with
                {
                    'name' : 'Javier Gardenia'
                }
            %}
            {% include 'demo/tab-dropdown-single.twig' with
                {
                    'class' : 'active',
                    'name' : 'Keith Rural (3)'
                }
            %}
            {% include 'demo/tab-dropdown-single.twig' with
                {
                    'name' : 'Joe Potts'
                }
            %}
            {% include 'demo/tab-dropdown-single.twig' with
                {
                    'name' : 'Karen Ferdinand'
                }
            %}
        </div>
    </div>

