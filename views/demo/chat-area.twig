    <div class="conversation-area">
        {% include 'demo/conversation-line-item.twig' with
            {
                'class' : 'you',
                'first_name' : 'Anne',
                'timestamp' : '3:34 PM',
                'message' : "Let me know when you've booked your flight. It looks like either noon or 6 AM.<br>Preference?"
            }
        %}
        {% include 'demo/conversation-line-item.twig' with
            {
                'class' : 'me',
                'first_name' : 'Jake',
                'timestamp' : '3:54 PM',
                'message' : "Earlier I guess<br>Booking now."
            }
        %}
        {% include 'demo/conversation-line-item.twig' with
            {
                'class' : 'you',
                'first_name' : 'Anne',
                'timestamp' : '4:00 PM',
                'message' : "Works for me. see you at the airport. Iâ€™ll probably get there around 5:15"
            }
        %}
        <div class="dateline">
            <div class="hr"></div>
            <div class="day">
                Today
            </div>
        </div>
        {% include 'demo/conversation-line-item.twig' with
            {
                'class' : 'me',
                'first_name' : 'Jake',
                'timestamp' : '11:52 AM',
                'message' : "That went better than expected..."
            }
        %}
    </div>

