<section class="chat-area one-tab-state">

    <div class="tab-bar">
        <div class="tab-container">
            {% include 'demo/chat-tab.twig' with
                {
                    'class' : 'active',
                    'tab_name' : 'Anne Wright'
                }
            %}
            {% include 'demo/chat-tab.twig' with
                {
                    'class' : '',
                    'tab_name' : 'R & D'
                }
            %}
