
<!-- Broadcasts -->

<section class="broadcasts">

	<div class="now-playing-big">
		<img src="images/market-bulletin-playing.png" alt="Market Bulletin Playing FPO">
		<div class="minimize-control">

		</div>
	</div>

	<div class="header">
		<div class="play-pause">
			<img class="pause" src="images/pause.svg" alt="Pause icon">
			<img class="play" src="images/play.svg" alt="Pause icon">
		</div>
		<img class="now-playing-small" src="images/wave-lines-long.png" alt="Market Bulletin Playing FPO">
		<div class="title">
			<span class="default show">Broadcasts</span>
			<span class="one-playing">Market Bulletin</span>
			<span class="multiple-playing">3 Playing</span>
{# 			<span class="count">14</span>
 #}		</div>
		<div class="more-toggle">
			<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 54.9 35.9" style="enable-background:new 0 0 54.9 35.9;" xml:space="preserve">
			    <polygon class="st0" points="53.3,8.4 46.3,1.3 27.5,20.1 8.7,1.3 1.6,8.4 20.4,27.2 27.5,34.2 44.5,17.2 44.5,17.2 "/>
			</svg>
		</div>
	</div>

	<div class="channels">

		<span class="section-title first">
			Channels
		</span>

		{% include 'demo/broadcast-channel.twig' with
			{
				title: '<img src="images/cnn.png" alt="Channel logo - CNN">'
			}
		%}
		{% include 'demo/broadcast-channel.twig' with
			{
				title: '<img src="images/espn.png" alt="Channel logo - ESPN">'
			}
		%}
		{% include 'demo/broadcast-channel.twig' with
			{
				title: '<img src="images/wnyc.png" alt="Channel logo - WNYC">'
			}
		%}
		{% include 'demo/broadcast-channel.twig' with
			{
				title: '<img src="images/bbc.svg" alt="Channel logo - BBC">'
			}
		%}

		<span class="section-title">
			Internal
		</span>

		{% include 'demo/broadcast-channel.twig' with
			{
				class : 'market-bulletin',
				title: 'Market Bulletin'
			}
		%}
		{% include 'demo/broadcast-channel.twig' with
			{
				title: 'Eurozone Report'
			}
		%}
		{% include 'demo/broadcast-channel.twig' with
			{
				title: 'Energy Markets'
			}
		%}
		{% include 'demo/broadcast-channel.twig' with
			{
				title: 'FinTech Radio'
			}
		%}


		<span class="section-title">
			Offline
		</span>

		{% include 'demo/broadcast-channel.twig' with
			{
				class :'offline',
				title : 'Evening Bulletin',
				time : '6:00 pm / est'
			}
		%}
		{% include 'demo/broadcast-channel.twig' with
			{
				class :'offline',
				title : 'Solar Stocks',
				time : '6:30 pm / est'
			}
		%}
	</div>

</section>
